#include <iostream>
#include <string>
#include <cctype> // isupper islower isdigit isspace
using namespace std;

int main() {
    string line;
    // 提示（可选）
    // cout << "请输入一行不超过50个字符，以回车结束:\n";

    if (!getline(cin, line)) {
        // 读取失败（例如 EOF）
        return 0;
    }

    // 如果输入超过50个字符，只保留前50个
    if (line.size() > 50) line.resize(50);

    int upper = 0;
    int lower = 0;
    int digits = 0;
    int spaces = 0;
    int other = 0;

    for (unsigned char ch : line) {
        if (isupper(ch)) ++upper;
        else if (islower(ch)) ++lower;
        else if (isdigit(ch)) ++digits;
        else if (isspace(ch)) ++spaces; // 包含空格、制表等，若只计空格请用 ch == ' '
        else ++other;
    }

    cout << "大写字母数：" << upper << '\n';
    cout << "小写字母数：" << lower << '\n';
    cout << "数字数：" << digits << '\n';
    cout << "空格数：" << spaces << '\n';
    cout << "其他字符数：" << other << '\n';

    return 0;
}
